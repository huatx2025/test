{
  "name": "easydraft-editor",
  "version": "1.0.1",
  "description": "编轻松自媒体编辑器",
  "main": "./out/main/index.js",
  "author": "jzl.com",
  "homepage": "https://a.jzl.com",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:ps": "chcp 65001 && electron-vite dev",
    "build": "electron-vite build",
    "build:dev": "electron-vite build --mode development",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run clean && npm run build && electron-builder --dir",
    "clean": "npx rimraf dist out",
    "build:win": "npm run clean && npm run build && electron-builder --win --config.win.sign=false",
    "build:mac": "npm run clean && npm run build && electron-builder --mac",
    "build:linux": "npm run clean && npm run build && electron-builder --linux",
    "build:dev:win": "npm run clean && npm run build:dev && electron-builder --win --config.win.sign=false",
    "build:dev:mac": "npm run clean && npm run build:dev && electron-builder --mac",
    "build:dev:linux": "npm run clean && npm run build:dev && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@ant-design/icons-vue": "^6.1.0",
    "ant-design-vue": "~4.2.6",
    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "electron-updater": "^6.7.3",
    "mitt": "^3.0.1",
    "pako": "^2.1.0",
    "pinia": "^3.0.4",
    "sortablejs": "^1.15.6",
    "turndown": "^7.2.2",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.1.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "electron": "^28.2.8",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.4.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "sass-embedded": "^1.93.3",
    "sharp": "^0.34.5",
    "vite": "^5.2.8",
    "vue": "^3.5.24",
    "vue-eslint-parser": "^10.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
